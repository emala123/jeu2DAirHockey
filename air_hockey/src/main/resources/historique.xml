<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.ScrollPane?>


<VBox xmlns:fx="http://javafx.com/fxml"
	fx:controller="air_hockey.frontal.vues.VueHistorique"
	styleClass="conteneur" id="vue-historique">

	 <Pane styleClass="petit-espace-vertical"/>

	<HBox>

		<Button fx:id="boutonRetourMenu" text="%retourMenu"
			styleClass="gros-bouton" id="bouton-retour-menu">
		</Button>

	</HBox>

	<Pane styleClass="petit-espace-vertical" />

	<Label text="%titre" styleClass="titre" id="titre" />



	<Pane styleClass="petit-espace-vertical" />


	<ImageView>
		<image>

			<Image url="@logo.png" />

		</image>
	</ImageView>


	<Pane styleClass="petit-espace-vertical" />





	<Button fx:id="boutonAdd" text="%add" styleClass="add-bouton"
		id="bouton-add">
	</Button>

	<!-- ajouter -->
    <Pane VBox.vgrow="ALWAYS" styleClass="grand-espace-vertical"/>

	<!-- ajouter -->
    <HBox styleClass="conteneur,conteneur-parent">

        <Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal"/>
		
		<ScrollPane HBox.hgrow="ALWAYS" fitToWidth="true">
        <content>
		
        <VBox HBox.hgrow="ALWAYS" styleClass="conteneur" fx:id="conteneurHistorique" id="conteneur-historique">
        </VBox>
		
		 </content>
    </ScrollPane>
		
        <Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal"/>
		
    </HBox>

    <!-- ajouter -->
    <Pane HBox.hgrow="ALWAYS" styleClass="grand-espace-horizontal"/>



</VBox>